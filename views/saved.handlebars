<main>
    <div class="container-fluid but-fixed">
        <div class="row d-flex justify-content-center mt-4">
            <div class="col-12 text-center">
                <h1 class="mb-3 text-white">Saved Articles</h1>
                <h4 class="mb-5 text-white font-weight-light">A list of articles that were saved by users.</h4>
            </div>
            <div class="col-md-10 col-lg-12">
                <div class="card-deck justify-content-center">
                    {{#each article}}
                        <div class="article card rounded-0 border-0">
                            <div class="card-body">
                                <a class="thumb" href="{{this.url}}" target="_blank" rel="noreferrer noopener" style="background-image: url({{this.img}});"></a>
                                <h5><a href="{{this.url}}" target="_blank" rel="noreferrer noopener">{{this.title}}</a></h5>
                                <p class="text-muted font-weight-light mb-0">{{this.summary}}</p>
                            </div>
                            <div class="card-footer text-right">
                                <a class="card-link add-note" href="#" data-id="{{this._id}}"><small class="text-muted font-weight-light">Add Note</small></a>
                                <a class="card-link remove-article" href="#" data-id="{{this._id}}"><small class="text-muted font-weight-light">Remove Article</small></a>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</main>

<div aria-hidden="true" class="modal fade" id="customer-modal" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-group">
                    <label for="customer-name">What's Your Name?</label>
                    <input id="customer-name" class="form-control" type="text" name="customerName">
                </div>
                <div class="form-group d-flex justify-content-end mb-0">
                    <button class="btn btn-primary eat-btn" type="button">Continue</button>
                </div>
            </div>
        </div>
    </div>
</div>
